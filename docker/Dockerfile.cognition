FROM python:3.11-slim

WORKDIR /app

RUN apt-get update && apt-get install -y build-essential && rm -rf /var/lib/apt/lists/*

COPY requirements/base.txt .
COPY requirements/cognition.txt .
RUN pip install --no-cache-dir --timeout=600 -r cognition.txt

COPY src/ ./src/

EXPOSE 8002

CMD ["uvicorn", "src.models.cognition_service:app", "--host", "0.0.0.0", "--port", "8002"]


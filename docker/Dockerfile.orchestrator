    FROM python:3.11-slim
    
    WORKDIR /app
    
    RUN apt-get update && apt-get install -y build-essential && rm -rf /var/lib/apt/lists/*
    
    # Copy all requirements files
    COPY requirements/ .
    
    # Install only what the orchestrator needs from its own file
    RUN pip install --no-cache-dir -r orchestrator.txt
    
    COPY src/ ./src/
    
    EXPOSE 8004
    
    CMD ["uvicorn", "src.models.orchestrator_agent:app", "--host", "0.0.0.0", "--port", "8004"]
    
